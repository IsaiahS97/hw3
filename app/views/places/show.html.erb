<!-- Company details page -->

<h1><%= @place["name"] %></h1>

<h2>Entries</h2>

<ol>
  <% for entry in @entries %>
    <h3><%= entry["title"] %> </h3>
    <h5><%= entry["event_date"] %> </h5>
    <h5><%= entry["description"] %> </h5>
  <% end %>
</ol>

<p>
  <a href="/entries/new?place_id=<%= @place["id"] %>">New Post</a>
</p>

<p>
  <a href="/places">Back to all places</a>
</p>